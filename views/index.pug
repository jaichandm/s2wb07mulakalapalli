extends layout

block content
  h1= title
  p Welcome to #{title}. My name is Jaichand Mulakalapalli

  - var btnType = 'info'
  - var btnSize = 'lg'
  button(type='button' onclick="moreClaps()"
  class=`btn btn-${btnType} btn-${btnSize}` 
  ) Press Me

  div(id="target") Clap for me

  a(href='/cars') Click here for cars

  script.
    var clap_count=0;
    function moreClaps(){
      clap_count =clap_count+2;
      console.log("moreClaps method implemented");
      document.getElementById("target").innerHTML = `Clap ${clap_count} times.`;
    }
